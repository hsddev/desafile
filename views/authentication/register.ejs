<% layout('../layouts/auth') -%>

<% block('title', 'Sign Up || ' + page.companyName); -%>

<!--begin::Body-->
<div class="kt-login-v2__body">

  <!--begin::Wrapper-->
  <div class="kt-login-v2__wrapper">
    <div class="kt-login-v2__container">
      <div class="kt-login-v2__title">
        <h3>Sign Up</h3>
      </div>

      <!--begin::Form-->
      <form class="kt-login-v2__form kt-form" action="" method="post" autocomplete="off" novalidate>
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger fade show" role="alert">
            <div class="alert-icon"><i class="flaticon-questions-circular-button"></i></div>
              <div class="alert-text"><%= error[0] %></div>
              <div class="alert-close">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true"><i class="la la-close"></i></span>
                </button>
            </div>
          </div>
        <% }; %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <% if(errors.find(error => error.param ==='fullname')) { %>
            <input class="form-control is-invalid" type="text" placeholder="Full Name" name="fullname" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].username %>" <% } %> >
            <div class="invalid-feedback"><%= errors.find(error => error.param ==='fullname').msg %></div>
          <% } else { %>
            <input class="form-control" type="text" placeholder="Full Name" name="fullname" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].fullname %>" <% } %> >
          <% }; %>
        </div>
        <div class="form-group">
          <% if(errors.find(error => error.param ==='phonenumber')) { %>
            <input class="form-control is-invalid" type="text" placeholder="Phone number" name="phonenumber" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].phonenumber %>" <% } %> >
            <div class="invalid-feedback"><%= errors.find(error => error.param ==='phonenumber').msg %></div>
          <% } else { %>
            <input class="form-control" type="text" placeholder="Phone number" name="phonenumber" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].phonenumber %>" <% } %> >
          <% }; %>
        </div>
        <div class="form-group">
          <% if(errors.find(error => error.param ==='username')) { %>
            <input class="form-control is-invalid" type="text" placeholder="Username" name="username" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].username %>" <% } %> >
            <div class="invalid-feedback"><%= errors.find(error => error.param ==='username').msg %></div>
          <% } else { %>
            <input class="form-control" type="text" placeholder="Username" name="username" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].username %>" <% } %> >
          <% }; %>
        </div>
        <div class="form-group">
          <% if(errors.find(error => error.param ==='email')) { %>
            <input class="form-control is-invalid" type="email" placeholder="E-mail" name="email" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].email %>" <% } %>>
            <div class="invalid-feedback"><%= errors.find(error => error.param ==='email').msg %></div>
          <% } else { %>
            <input class="form-control" type="email" placeholder="E-maill" name="email" autocomplete="off" <% if (login.length > 0) { %> value="<%= login[0].email %>" <% } %>>
            <% }; %>
        </div>
        <div class="form-group">
          <% if(errors.find(error => error.param ==='password')) { %>
            <input class="form-control is-invalid" type="password" placeholder="Password" name="password" autocomplete="off">
            <div class="invalid-feedback"><%= errors.find(error => error.param ==='password').msg %></div>
          <% } else { %>
            <input class="form-control" type="password" placeholder="Password" name="password" autocomplete="off">
          <% }; %>
        </div>

        <!--begin::Action-->
        <div class="kt-login-v2__actions">
          <a href="/login" class="kt-link kt-link--brand">
            I have an account!
          </a>
          <button type="submit" class="btn btn-brand btn-elevate btn-pill">Sign Up</button>
        </div>
        <!--end::Action-->
      </form>

      <!--end::Form-->
    </div>
  </div>

  <!--end::Wrapper-->

  <!--begin::Image-->
  <div class="kt-login-v2__image" style="max-height: 350px;">
    <img src="./assets/media/misc/bg_icon.svg" alt="">
  </div>

  <!--begin::Image-->
</div>

<!--begin::Body-->
